@model SwitchBook.ViewModels.TradeViewModel

@{
    ViewData["Title"] = "Index";
}
<div>
    @Html.DisplayFor(modelItem => Model.Book.Title)
    @Html.DisplayFor(modelItem => Model.Book.Author)
    @Html.DisplayFor(modelItem => Model.Book.Description)


</div>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Book.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Book.Author)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.OwnerId)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Book.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Book.Image)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.MyBooks) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.OwnerId)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @if (item.Image != null)
                {
                    <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))" />
                }
            </td>
        </tr>
    }
    </tbody>
</table>